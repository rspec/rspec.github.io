div.people

  h2.title Minds Behind the Scene

  div.team-list
    h4 THE TEAM
    - for team in current_page.data['team']
      div.box
        = image_tag team.pic, alt: team.name, class: "media-object"
        div.desc
          div= team.name
          - if team.web
            = link_to team.web do
              = image_tag 'link.png', alt: "website"
          - if team.twitter
            span.img-thumbnail
              = link_to "https://twitter.com/#{team.twitter}" do
                = image_tag 'twitter-icon.png', alt: "twitter"
          - if team.github
            span.img-thumbnail
              = link_to "https://github.com/#{team.github}" do
                = image_tag 'github-icon.png', alt: "github"
  hr
  div.alumni-list
    h4 THE ALUMNI
    - for alum in current_page.data['alumni']
      div.box
        = image_tag alum.pic, alt: alum.name, class: "media-object"
        div.desc
          div= alum.name
          - if alum.web
            = link_to alum.web do
              = image_tag 'link.png', alt: "website"
          - if alum.twitter
            span.img-thumbnail
              = link_to "https://twitter.com/#{alum.twitter}" do
                = image_tag 'twitter-icon.png', alt: "twitter"
          - if alum.github
            span.img-thumbnail
              = link_to "https://github.com/#{alum.github}" do
                = image_tag 'github-icon.png', alt: "github"
